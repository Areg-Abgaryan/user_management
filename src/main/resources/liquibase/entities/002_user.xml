<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create_user_table" author="areg">

        <createTable tableName="user" schemaName="public">

            <!-- Include columns from BaseEntity -->
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Include columns from CreateUpdateEntity -->
            <column name="uuid" type="uuid">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="bigint">
                <constraints nullable="false"/>
            </column>

            <!-- Include columns specific to UserEntity -->
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="salt" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="last_login_at" type="bigint"/>

            <column name="otp" type="varchar(16)"/>

            <column name="otp_creation_time" type="bigint"/>

            <column name="user_group_id" type="bigint"/>

        </createTable>

    </changeSet>

    <!-- Add foreign key constraint for user_group_id -->
    <changeSet id="add_fk_user_group_id_to_user" author="areg">
        <addForeignKeyConstraint baseTableName="user"
                                 baseColumnNames="user_group_id"
                                 constraintName="fk_user_user_group_id"
                                 referencedTableName="user_group"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>